<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TableViewController">
   <top>
      <Label styleClass="title-label" text="生徒情報" BorderPane.alignment="TOP_LEFT" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableView" prefHeight="600.0" prefWidth="750.0">
              <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="名前" />
                  <TableColumn fx:id="addressColumn" prefWidth="200.0" text="住所" />
                  <TableColumn fx:id="phoneColumn" prefWidth="130.0" text="電話番号" />
                  <TableColumn fx:id="emailColumn" prefWidth="200.0" text="メール" />
                  <TableColumn fx:id="graduationColumn" prefWidth="75.0" text="卒業年度" />
              </columns>
            </TableView>
            <FlowPane prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="ID">
                     <FlowPane.margin>
                        <Insets left="5.0" top="10.0" />
                     </FlowPane.margin>
                  </Label>
                  <TextField fx:id="idText">
                     <FlowPane.margin>
                        <Insets left="5.0" top="10.0" />
                     </FlowPane.margin>
                  </TextField>
                  <Label text="名前">
                     <FlowPane.margin>
                        <Insets left="5.0" top="10.0" />
                     </FlowPane.margin>
                  </Label>
                  <TextField fx:id="nameText">
                     <FlowPane.margin>
                        <Insets left="5.0" top="10.0" />
                     </FlowPane.margin>
                  </TextField>
                  <Button mnemonicParsing="false" text="検索">
                     <FlowPane.margin>
                        <Insets left="10.0" top="10.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </center>
</BorderPane>
